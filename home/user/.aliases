# System
alias sudo="sudo "
alias jesus="reboot -h"
alias rip="shutdown -h"
alias randbg="~/.scripts/randomize.sh"

# Terminal
alias c="clear"
alias mkcd="_(){ mkdir $1; cd $1 }; _"

# Options
alias ei3="vim ~/.config/i3/config && i3-msg reload && i3-msg restart"
alias ezsh="vim ~/.zshrc && source ~/.zshrc"
alias exrc="vim ~/.Xresources && xrdb ~/.Xresources"
alias ealiases="vim ~./aliases && source ~/.aliases"

# Tools
alias clbin="curl -F 'clbin=<-' https://clbin.com"

